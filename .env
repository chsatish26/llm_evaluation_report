# ============================================
# PROVIDER SELECTION - openai
# ============================================
# Options: aws | openai
# PROVIDER=openai
# MODEL_ID=gpt-5
# EVAL_MODEL_MAPPING=openai:gpt-5

# ============================================
# PROVIDER SELECTION - AWS
# ============================================
PROVIDER=aws
EVAL_MODEL_MAPPING=aws:us.anthropic.claude-opus-4-1-20250805-v1:0
MODEL_ID=us.anthropic.claude-opus-4-1-20250805-v1:0
AWS_REGION=us-east-1
# ============================================
# MULTI-MODEL EVALUATION MATRIX
# ============================================
# Format: provider:model_id,provider:model_id
# Examples:
#   Single AWS: aws:us.anthropic.claude-3-5-sonnet-20240620-v1:0
#   Single OpenAI: openai:gpt-4
#   Multiple: aws:us.anthropic.claude-3-5-sonnet-20240620-v1:0,openai:gpt-4
# EVAL_MODEL_MAPPING=aws:us.anthropic.claude-opus-4-1-20250805-v1:0
# EVAL_MODEL_MAPPING=openai:gpt-5
# ============================================
# AWS BEDROCK CONFIGURATION
# ============================================
# MODEL_ID=us.anthropic.claude-opus-4-1-20250805-v1:0
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ============================================
# OPENAI CONFIGURATION
# ============================================
OPENAI_API_KEY=key
OPENAI_MODEL_ID=gpt-5


# ============================================
# LLM-AS-JUDGE CONFIGURATION
# ============================================
JUDGE_PROVIDER=aws
JUDGE_MODEL_ID=us.anthropic.claude-3-5-sonnet-20240620-v1:0
JUDGE_TEMPERATURE=0.0
JUDGE_MAX_TOKENS=1024

# Judge OpenAI credentials (if different from main)
# JUDGE_OPENAI_API_KEY=your_judge_openai_key

# ============================================
# DEEPEVAL CONFIGURATION (OPTIONAL)
# ============================================
DEEPEVAL_ENABLED=true
DEEPEVAL_PROVIDER=aws
DEEPEVAL_MODEL_ID=us.anthropic.claude-3-5-sonnet-20240620-v1:0
DEEPEVAL_METRICS=answer_relevancy,faithfulness,toxicity,bias,hallucination
DEEPEVAL_STRICT=false
DEEPEVAL_TEMPERATURE=0.0
DEEPEVAL_MAX_TOKENS=1024

# DeepEval AWS credentials (if different from main)
# DEEPEVAL_AWS_ACCESS_KEY_ID=your_deepeval_aws_key
# DEEPEVAL_AWS_SECRET_ACCESS_KEY=your_deepeval_aws_secret

# DeepEval OpenAI credentials (if using OpenAI for DeepEval)
# DEEPEVAL_OPENAI_API_KEY=your_deepeval_openai_key

# ============================================
# TEST CONFIGURATION
# ============================================
PROMPT_TEMPLATE_PATH=prompt_templates_enhanced_deepeval.json
OUTPUT_REPORT_PATH=evaluation_reports

# ============================================
# MODEL SETTINGS
# ============================================
MAX_TOKENS=4096
TEMPERATURE=1.0

# ============================================
# REPORT CONFIGURATION
# ============================================
REPORT_FORMAT=pdf
INCLUDE_TIMESTAMP=true
INCLUDE_TOKEN_USAGE=true AWS credentials (if different from main)
